mixin code-preview(key)
  ngl-tabs( [(selected)]='selectedTab[\'' +  key + '\']')
    template(ngl-tab, heading="Markup")
      pre.language-html
        code.language-html(ngNonBindable, [innerHtml]='getProp(\'' + key + '\', \'html\')')
    template(ngl-tab, heading="Typescript")
      pre.language-typescript
        code.language-typescript(ngNonBindable, [innerHtml]='getProp(\'' + key + '\', \'ts\')')
    template(ngl-tab, heading="API")
      pre.language-markup
        code.language-markup.api(ngNonBindable, [innerHtml]='getProp(\'' + key + '\', \'api\')')


.slds-container--large.slds-container--center
  plunker(#playground="playground")
  .slds-p-around--large
    each key in ['badges', 'breadcrumbs', 'buttons', 'datatables', 'datepickers', 'forms', 'icons', 'images', 'lookups', 'menus', 'modals', 'notifications', 'paginations', 'pick', 'picklist', 'pills', 'popovers', 'ratings', 'sections', 'spinners', 'tabs']
      section.slds-m-top--x-large(id=key)
        h1.slds-text-heading--large
          | {{getProp('#{key}', 'title')}}
          button.slds-button.slds-button--neutral.slds-button--small((click)='open(playground, \'' + key + '\')', style="float:right; font-size:small;")
            | TRY IN PLUNKER
        hr.slds-m-top--small.slds-m-bottom--large
        .slds-grid
          .slds-col.slds-size--1-of-2
            #{'demo-' + key}
          .slds-col.slds-size--1-of-2
            .slds-p-horizontal--small.readme(ngNonBindable, [innerHtml]='getProp(\'' + key + '\', \'readme\')')
        .slds-grid.slds-m-top--large
          .slds-col
            +code-preview(key)
